    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const skills = [
                { name: "Développement Web", level: 90 },
                { name: "Programmation", level: 85 },
                { name: "Utilisation de systèmes numériques", level: 80 }
            ];

            const skillContainer = document.getElementById("skills-list");
            skills.forEach(skill => {
                const skillBar = document.createElement("div");
                skillBar.className = "skill-bar";

                const progressBar = document.createElement("div");
                progressBar.className = "progress bg-primary";
                progressBar.style.width = skill.level + "%";
                progressBar.textContent = `${skill.name} (${skill.level}%)`;

                skillBar.appendChild(progressBar);
                skillContainer.appendChild(skillBar);
            });
        });
    </script>

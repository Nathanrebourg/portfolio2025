<!-- filepath: templates/base.html.twig -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}My Symfony Portfolio{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/flatly/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('home') }}">My Portfolio</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('hobbies') }}">Hobbies</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('cv') }}">CV</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('portfolio') }}">Portfolio</a></li>
            </ul>
        </div>
    </nav>

    <header class="text-center my-5">
        <h1>{% block header %}My Symfony Portfolio{% endblock %}</h1>
        <p>{% block subheader %}Showcasing my skills and projects.{% endblock %}</p>
    </header>

    <div class="container">
        {% block body %}{% endblock %}
    </div>

    <footer class="text-center">
        <p>&copy; 2025 - My Symfony Portfolio | All rights reserved</p>
    </footer>
</body>
</html>